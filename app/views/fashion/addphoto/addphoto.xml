<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">

    <GridLayout columns="*" rows="*, auto, auto, auto,auto" width="100%" height="100%">
      <Image id="image" src=""  width="100%" height="65%" col="0" row="0"/>
      <Button class="btn btn-primary"  flexGrow="1" text="Tomar Foto" tap="onRequestPermissionsTap" col="0" row="1"/>
      <Label text="Nota" class="label-text-static" col="0" row="2"/>
      <TextField text="{{ note }}" class="field-text-static" hint="Nota" returnKeyType="done" col="0" row="3"/>


      <Button class="btn btn-primary"  flexGrow="1" text="Guardar Foto" tap="onSaveUser" col="0" row="4"/>
  </GridLayout>

</Page>