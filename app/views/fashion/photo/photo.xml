<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page">
    <StackLayout>
        <GridLayout  id="container" width="100%" height="80%" class="container">
            <Image id="dragImage" src="{{ picture }}" height="80%"  horizontalAlignment="center" verticalAlignment="center" pan="onPan" ></Image>            
        </GridLayout>
        <Button text="Capture" tap="takePicture" class="btn btn-primary"></Button>
    </StackLayout>
</Page>